---
import "semantic-ui-css/semantic.min.css"

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Okkema Labs">
    <meta name="author" content="Okkema Labs <correos@okkema.org>">
    <title>{title}</title>
    <link rel="icon" href="favicon.ico">
    <meta property="og:title" content="Okkema Labs">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://okkema.org">
    <meta property="og:description" content="Cloud Consulting and Web Development">
    <meta property="og:image" content="https://okkema.org/logo.png">
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "url": "https://okkema.org",
        "logo": "https://okkema.org/logo.png",
        "location": "Planet Earth",
        "email": "correos@okkema.org",
        "description": "Cloud Consulting and Web Development",
        "name": "Okkema Labs"
      }
    </script>
    <style>
      html, body {
        height: 100vh;
      }
      body{
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
    </style>
	</head>
	<body>
		<slot />
	</body>
</html>
